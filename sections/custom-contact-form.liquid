{{ 'section-contact.css' | asset_url | stylesheet_tag }}
<div class="contact-form" {% if section.settings.background != blank %}
    style="background-image: url('{{section.settings.background | img_url: 'master' }}')"{% endif %}>
<div class="body-contact page-width-desktop">
    <div class="body-contact_left-side">
        <div class="body-contact_left-side-text">
            <div class="body-contact_left-side-text_title">
            {% if section.settings.title != blank %}
                <h2>{{section.settings.title}}</h2>
            {% endif %}
            </div>
            <p class="text-description-left">{{ section.settings.text_description  }}</p>
        </div>
        <div class="body-contact_left-side-placing-email">
            <p class="body-contact_left-side-placing-email__placing"><span>{% render 'icon-placing' %}</span>{{ section.settings.placing }}</p>
            <p class="body-contact_left-side-placing-email__email">{% render 'icon-E-mail' %}{{section.settings.email}} </p>
        </div>
    </div>
    <div class="contact">
        {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}
            {%- if form.posted_successfully? -%}
                <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>{% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}</h2>
            {%- elsif form.errors -%}
                <div class="form__message">
                    <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>{% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}</h2>
                </div>
                <ul class="form-status-list caption-large" role="list">
                    <li>
                        <a href="#ContactForm-email" class="link">
                            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                        </a>
                    </li>
                </ul>
            {%- endif -%}
            <div class="contact__fields">
                <div class="main-fields">
                    <div class="field">
                        <label for="ContactForm-name">{{ 'templates.contact.form.name' | t }}<span aria-hidden="true">*</span></label>
                        <input class="field__input" autocomplete="name" type="text" id="ContactForm-name" name="contact[{{ 'templates.contact.form.name' | t }}]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'templates.contact.form.name' | t }}">
                        <span class="icon-E-mail">{% render 'icon-person' %}</span>
                    </div>
                    <div class="field field--with-error">
                        <label for="ContactForm-email">{{ 'templates.contact.form.email' | t }}</label>
                        <input
                                autocomplete="email"
                                type="email"
                                id="ContactForm-email"
                                class="field__input"
                                name="contact[email]"
                                spellcheck="false"
                                autocapitalize="off"
                                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                                aria-required="true"
                                {% if form.errors contains 'email' %}
                                    aria-invalid="true"
                                    aria-describedby="ContactForm-email-error"
                                {% endif %}
                                placeholder="{{ 'templates.contact.form.email' | t }}"
                        >
                        <span class="icon-E-mail">{% render 'icon-email' %}</span>
                        {%- if form.errors contains 'email' -%}
                            <small class="contact__field-error" id="ContactForm-email-error">
                                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                                <span class="form__message">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
                            </small>
                        {%- endif -%}
                    </div>
                    <div class="field">
                        <label for="ContactForm-phone">Phone<span aria-hidden="true">*</span></label>
                        <input type="tel" id="ContactForm-phone" class="field__input" autocomplete="tel" name="contact[{{ 'templates.contact.form.phone' | t }}]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="{{ 'templates.contact.form.phone' | t }}">
                        <span class="icon-E-mail">{% render 'icon-phone_in_talk' %}</span>
                    </div>
                    <div class="field select">
                        <label for="select_in-form" class="select_subject">Subject</label>
                        <select name="select" id="select_in-form" class="select_in-form__contact">
                            <option value="">What you are reaching out for</option>
                            {% for block in section.blocks %}
                            <option value="{{block.settings.option_select}}">{{block.settings.option_select}}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="additional-fields">
                    <div class="field">
                        <label class="form__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }}</label>
                        <textarea
                                rows="10"
                                id="ContactForm-body"
                                class="field__input"
                                name="contact[{{ 'templates.contact.form.comment' | t }}]"
                                placeholder="{{ 'templates.contact.form.comment' | t }}"
                        >
              {{- form.body -}}
            </textarea>
                    </div>
                </div>
            </div>
            <div class="contact__button">
                <button type="submit" class="button-contact">
                    Send   <span>{% render 'icon-send' %}</span>
                </button>
            </div>
        {%- endform -%}
    </div>
</div>

{% schema %}
{
"name": "Custom Contact Form",
"tag": "section",
"class": "section",
"settings": [
    {
    "type": "richtext",
    "id": "title",
    "label": "Title"
    },
    {
        "type":"text",
        "id":"text_description",
        "label":"text description"
    },
    {
        "type":"text",
        "id": "placing",
        "label":"placing"
    },
    {
        "type":"text",
        "id":"email",
        "label":"email"
    }
    ],
    "blocks": [
        {
            "name": "option_select",
            "type": "blocks",
            "settings": [
                {
                    "type": "text",
                    "id": "option_select",
                    "label": "option select"
                }
            ]
        }
    ],

    "presets": [
    {
        "name":"Custom Contact Form"
    }
    ]
    }
{% endschema %}
