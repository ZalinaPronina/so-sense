<div class="faq-section page-width-desktop" data-aos="fade-up" id="faq_section">
    <h3>FAQ</h3>
    <div class="faq-block__wrapper">
        {%- for block in section.blocks -%}
            <div class="faq-block">
                <div class="faq-question">
                    <h6>{{block.settings.title}}</h6>
                    <small></small>
                </div>
                <div class="faq-answer">{{block.settings.answer}}</div>
            </div>
        {% endfor %}
    </div>
</div>
<script>
   document.querySelectorAll('.faq-block').forEach(block =>{
    block.addEventListener('click', function() {
        if(this.classList.contains('active')){
            this.classList.remove('active');
        }else{
            this.classList.add('active')
        }
    })
   })
</script>
{% schema %}
{
  "name": "Faq",
    "blocks": [
    {
        "type": "block",
        "name": "Block",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Question"
            },
            {
                "type": "richtext",
                "id": "answer",
                "label": "Answer"
            }
        ]
    }
    ]
}
{% endschema %}
