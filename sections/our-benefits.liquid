<section class="page-width-desktop our-benefits" data-aos="fade-up">
    <div class="title-description">
        {% if section.settings.title != blank %}
            <h2 class="h2">{{section.settings.title}}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
            <div class="text">{{section.settings.text}}</div>
        {% endif %}
    </div>
    <div class="our-benefits__blocks">
        {%- for block in section.blocks -%}
            <div class="block-text">
                {% if block.settings.image != blank %}
                    <img src="{{block.settings.image | img_url: 'master' }}" alt="">
                {% endif %}
                <h5 {% if block.settings.color != blank %} style="color: {{block.settings.color}}" {% endif %} class="block-heading">{{block.settings.title}}</h5>
                <div class="text">{{block.settings.text}}</div>
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "Our Benefits",
    "settings": [
        {
            "type": "richtext",
            "id": "title",
            "label": "Title",
            "info": "Choose Bold to change the color"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text"
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "Block",
            "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "richtext",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "color",
                "id": "color",
                "label": "Color Title"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Text"
            }
            ]
        }
    ],
    "presets": [
        {
        "name": "Benefits"
        }
    ]
}
{% endschema %}
