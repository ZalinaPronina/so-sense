{% if section.settings.background != blank %}
    <style>
        @media only screen and (min-width: 990px){
            .image-banner{
                background-image: url('{{section.settings.background | img_url: 'master' }}')
            }
            .white_wave{
                background-image: url('{{section.settings.background_white | img_url: 'master' }}')
            }
        }
    </style>
{% endif %}
{% if section.settings.background_mobile != blank %}
    <style>
        @media only screen and (max-width: 989px){
            .image-banner{
                    background-image: url('{{section.settings.background_mobile | img_url: 'master' }}')
            }
            .white_wave{
                background-image: url('{{section.settings.background_white_mobile | img_url: 'master' }}')
            }
        }
    </style>
{% endif %}
<div class="background-image-header">
    {% if section.settings.btn_text != blank %}
        <a class="btn-primary" href="{{section.settings.btn_url}}">{{section.settings.btn_text}}</a>
    {% endif %}
    {% if section.settings.title != blank %}
        <h1 class="h1">{{section.settings.title}}</h1>
    {% endif %}
    {% if section.settings.text != blank %}
        <div class="description">{{section.settings.text}}</p>
    {% endif %}
</div>
<div class="background-image-container">
    <div class="white_wave"></div>
    <div class="image-banner"></div>
</div>
{% schema %}
{
  "name": "Image Banner",
    "settings": [
        {
            "type": "text",
            "id": "btn_text",
            "label": "Btn Text"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Btn Url"
        },
        {
            "type": "richtext",
            "id": "title",
            "label": "Title",
            "info": "Choose Bold to change the color"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text"
        },
        {
            "type": "image_picker",
            "id": "background",
            "label": "Background"
        },
        {
            "type": "image_picker",
            "id": "background_mobile",
            "label": "Background Mobile"
        },
        {
            "type": "image_picker",
            "id": "background_white",
            "label": "White wave"
        },
        {
            "type": "image_picker",
            "id": "background_white_mobile",
            "label": "White wave Mobile"
        }
    ],
    "presets": [
        {
        "name": "Image Banner"
        }
    ]
}
{% endschema %}