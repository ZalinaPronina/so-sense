<div class="body-login_left-side">
    <div class="body-contact_left-side-text">
        <div class="body-contact_left-side-text_title">
            {% if section.settings.title != blank %}
                <h2 class="h1">{{section.settings.title}}</h2>
            {% endif %}
        </div>
        <p class="text-description-left">{{ section.settings.text_description  }}</p>
    </div>
    <div class="body-contact_left-side-placing-email">
        <p class="body-contact_left-side-placing-email__placing">{{ section.settings.placing }}</p>

    </div>
     <button>button</button>
</div>
{% schema %}
    {
        "name": "loginForm",
        "tag": "section",
        "class": "section",
        "settings": [
            {
            "type": "richtext",
            "id": "title",
            "label": "Title"
            },
            {
            "type":"text",
            "id":"text_description",
            "label":"text description"
            },
            {
            "type":"text",
            "id": "placing",
            "label":"placing"
            }
        ],
"presets": [
{
"name":"loginForm"
}
]
}
{% endschema %}
