<div class="info-section" {% if section.settings.background != blank %}
style="background-image: url('{{section.settings.background | img_url: 'master' }}')"{% endif %}>
    <div class="page-width-desktop info-section__blocks">
        <div class="first_block">
            {% if section.settings.title %}
                <h6>{{section.settings.title}}</h6>
            {% endif %}
            <div class="years_block">
                <div class="content-way">
                    <small {% if section.settings.year_from_color %} style="color: {{section.settings.year_from_color}}" {% endif %}></small>
                    <small {% if section.settings.year_to_color %} style="color: {{section.settings.year_to_color}}" {% endif %}></small>
                </div>
                <div class="content-date">
                    <p {% if section.settings.year_from_color %} style="color: {{section.settings.year_from_color}}" {% endif %}>{{section.settings.year_from}}</p>
                    <p {% if section.settings.year_to_color %} style="color: {{section.settings.year_to_color}}" {% endif %}>{{section.settings.year_to}}</p>
                </div>
            </div>
        </div>
        <div class="second_block">
            <a class="btn-green" href="{{section.settings.btn_url}}">{{section.settings.btn_text}}</a>
            <h3>{{section.settings.title_second}}</h3>
            <p>{{section.settings.text_second}}</p>
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Info Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "background",
            "label": "Background"
        },
        {
            "type": "richtext",
            "id": "title",
            "label": "Title First Section"
        },
        {
            "type": "text",
            "id": "year_from",
            "label": "Year From"
        },
        {
            "type": "color",
            "id": "year_from_color",
            "label": "Year From Color"
        },
        {
            "type": "text",
            "id": "year_to",
            "label": "Year To"
        },
        {
            "type": "color",
            "id": "year_to_color",
            "label": "Year To Color"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Btn Text"
        },
        {
            "type": "text",
            "id": "btn_url",
            "label": "Btn Url"
        },
        {
            "type": "text",
            "id": "title_second",
            "label": "Title Second Section"
        },
        {
            "type": "richtext",
            "id": "text_second",
            "label": "Text Second Section"
        }
    ],
    "presets": [
        {
        "name": "Info Section"
        }
    ]
}
{% endschema %}