{{ 'about-us.css' | asset_url | stylesheet_tag }}
<section class="page-width-desktop about-us-4-blocks">
    <div class="about-us-4-blocks__flex">
        {%- for block in section.blocks -%}
            <div class="block-text">
                {% if block.settings.title != blank %}
                    <h4 class="h4">{{block.settings.title}}</h4>
                {% endif %}
                {% if block.settings.subtitle != blank %}
                    <h5 class="h5">{{block.settings.subtitle}}</h5>
                {% endif %}
                {% if block.settings.text != blank %}
                    <div class="text">{{block.settings.text}}</div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "About Us 4 Blocks",
  "blocks": [
        {
            "type": "block",
            "name": "Block",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "subtitle",
                    "label": "Subtitle"
                },
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }
    ]
}
{% endschema %}
