{{ 'about-us.css' | asset_url | stylesheet_tag }}
<section class="about-us-4-blocks">
    <div class="about-us-4-blocks__flex page-width-desktop" data-aos="fade-up">
        {%- for block in section.blocks -%}
            <div class="block-text masonry-entry">
                {% if block.settings.title != blank %}
                    <h4 class="h4">{{block.settings.title}}</h4>
                {% endif %}
                {% if block.settings.subtitle != blank %}
                    <h5 class="h5">{{block.settings.subtitle}}</h5>
                {% endif %}
                {% if block.settings.text != blank %}
                    <div class="text">{{block.settings.text}}</div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</section>
